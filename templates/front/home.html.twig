{# articles #}
<div class="site-section bg-light">
	<div class="container">
		<div class="row justify-content-center mb-5">
			<div class="col-md-7 text-center border-primary">
				<h2 class="font-weight-light text-primary">Nos articles</h2>
				<p class="color-black-opacity-5">See Our Daily News &amp; Updates</p>
			</div>
		</div>
		<div class="row mb-3 align-items-stretch">
			
			{% for article in articles %}

				{% set file_image = null %}
				{% set break = false %}

				{% for file in article.files %}
					{% if file.getTypeFile() == "image" %}
						{% set file_image = file %}
						{% set break = true %}
					{% endif %}
				{% endfor %}
				<div class="col-md-6 col-lg-4 mb-4 mb-lg-4">
					<div class="h-entry">
						<img src="{{ file_image ? asset('uploads/article/images/' ~ file_image.url) : '' }}" alt="{{ file_image ? file_image.url : '' }}" class="img-fluid rounded">
						<h2 class="font-size-regular">
							<a href="#" class="text-black">{{ article.titre }}</a>
						</h2>
						<div class="meta mb-3">by
							{{ article.user.nom }}<span class="mx-1">&bullet;</span>
							{{ article.createdAt|date('d-m-Y H:i') }}
							<span class="mx-1">&bullet;</span>
							<a href="{{ path('article', {'id': article.id }) }}">Voir details</a>
						</div>
						{% set some_html = article.contenu|raw %}
						<p class="p_truncate text-truncate">{{ some_html[:150]|striptags ~ ' ...' }}</p>
					</div>
				</div>
			{% endfor %}


			<div class="col-12 text-center mt-4">
				<a href="#" class="btn btn-primary rounded py-2 px-4 text-white">View All Posts</a>
			</div>
		</div>
	</div>
</div>

